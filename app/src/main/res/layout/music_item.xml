<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/music_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagine_dragons" />

    <TextView
        android:id="@+id/music_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/music_item_artist"
        app:layout_constraintStart_toEndOf="@+id/music_item_image"
        app:layout_constraintTop_toTopOf="@+id/music_item_image"
        tools:text="Thunder" />

    <TextView
        android:id="@+id/music_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/music_item_image"
        app:layout_constraintStart_toStartOf="@+id/music_item_title"
        app:layout_constraintTop_toBottomOf="@+id/music_item_title"
        tools:text="Imagine Dragons" />

    <TextView
        android:id="@+id/music_item_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/music_item_artist"
        app:layout_constraintStart_toEndOf="@+id/music_item_artist"
        app:layout_constraintTop_toTopOf="@+id/music_item_artist"
        tools:text="3:07 (0:30)" />

    <TextView
        android:id="@+id/music_item_rating_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/music_item_image"
        app:layout_constraintTop_toTopOf="@+id/music_item_image"
        tools:text="7"
        tools:textColor="@color/white" />
</android.support.constraint.ConstraintLayout>